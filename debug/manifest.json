{
    "manifest_version": 2,

    "name": "Click to execute",
    "description": "Enable css debugging tools",
    "version": "1.0",

    "permissions": [
        "tabs", "<all_urls>"
    ],

    "browser_action": {
        "default_icon": "assets/images/icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [{
        "matches": [
            "*://*/*"
        ],
        "css": ["assets/css/main.css"],
        "js": ["assets/js/vendor/jquery-2.2.3.min.js"],

        "run_at": "document_end",
        "all_frames": true
    }]
}
